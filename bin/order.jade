extends ../layout
//extends confirm
block content
    .review-payment
        h2= title
    .row
        .col-sm-8
            .table-responsive.cart_info
                table.table.table-condensed
                    thead
                        tr.cart_menu
                            td.image
                            td.description Product
                            td.price Unit Price
                            td.quantity Quantity
                            td.total Total
                    tbody

                        each product in products
                            -var quantity = product.Quantity;
                            -var name = product.ProductName;
                            -var productLink = '/cat/' + product.CategorySlug + '/' + product.ProductSlug;
                            -var unitPrice = product.ProductPrice;
                            -var productTotal = product.Total;
                            tr
                                td.cart_product
                                    //a(href=productLink)
                                        img(src='/img/products/' + product.Image, alt=name)
                                td.cart_description
                                    h4
                                        a(href=productLink)= name
                                    p= product.Description
                                td.cart_price
                                    p= unitPrice + ' €'
                                td.cart_quantity
                                    p=quantity
                                td.cart_total
                                    p.cart_total_price= productTotal + ' €'

        .col-sm-4
            .table-responsive.cart_info
                if address
                    table.table.table-condensed.total-result
                        thead
                            tr.cart_menu
                                td(colspan=2) Delivery Address

                        tbody
                            tr
                                td Fullname
                                td= address.FullName
                            tr
                                td Address
                                td= address.StreetAddress
                            tr
                                td
                                td= address.PostCode + ' ' + address.City
                            tr
                                td
                                td= address.Country
                            tr
                                td Tel
                                td= address.Phone

            .table-responsive.cart_info

                table.table.table-condensed.total-result
                    thead
                        tr.cart_menu
                            td(colspan=2) Summary

                    tbody
                        tr
                            td Sub Total
                            td= order.SubTotal + ' €'
                        tr
                            td Discount
                            td= order.Discount + ' €'
                        tr.shipping-cost
                            td Shipping Cost
                            if order.ShippingFee == 0
                                td Free
                            else
                                td= order.ShippingFee + ' €'
                        tr
                            td Total
                            td
                                span= order.Total + ' €'