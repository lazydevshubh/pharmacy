extends admin

block details
    .row
        .col-sm-6
            .table-responsive.cart_info
                table.table.table-condensed.total-result
                    thead.help_i_wanna_die
                        tr.cart_menu
                            td(colspan=2) Customer Information
                    tbody.help_i_wanna_die
                        tr
                            td Fullname
                            td= orderCustomer.FullName
                        tr
                            td Address
                            td= orderCustomer.StreetAddress
                        tr
                            td
                            td= orderCustomer.PostCode + ' ' + orderCustomer.City
                        tr
                            td
                            td= orderCustomer.Country
                        tr
                            td Tel
                            td= orderCustomer.Phone

        .col-sm-6
            .table-responsive.cart_info
                table.table.table-condensed.total-result
                    thead.help_i_wanna_die
                        tr.cart_menu
                            td(colspan=2) Delivery Address
                    tbody.help_i_wanna_die
                        tr
                            td Fullname
                            td= address.FullName
                        tr
                            td Address
                            td= address.StreetAddress
                        tr
                            td
                            td= address.PostCode + ' ' + address.City
                        tr
                            td
                            td= address.Country
                        tr
                            td Tel
                            td= address.Phone

    .row
        h5 Order Information
        .table-responsive.cart_info
            table.table.table-condensed
                thead.help_i_wanna_die
                    tr.cart_menu
                        td.image
                        td.description Product
                        td.price Unit Price
                        td.quantity Quantity
                        td.total Total
                tbody.help_i_wanna_die
                    each product in products
                        -var quantity = product.Quantity;
                        -var name = product.ProductName;
                        -var productLink = '/cat/' + product.CategorySlug + '/' + product.ProductSlug;
                        -var unitPrice = product.ProductPrice;
                        -var productTotal = product.Total;
                        tr
                            //td.cart_product
                                //a(href=productLink)
                                    img(src='/img/products/' + product.Image, alt=name)
                            td.cart_description
                                h4
                                    a(href=productLink)= name
                                p= product.Description
                            td.cart_price
                                p= unitPrice + ' ₹'
                            td.cart_quantity
                                p=quantity
                            td.cart_total
                                p.cart_total_price= productTotal + ' ₹'

                    tr
                        td(colspan='3')
                        td(colspan='2')
                            table.table.table-condensed.total-result
                                thead.please
                                    tr.cart_menu
                                        td(colspan=2) Summary

                                tbody.please
                                    tr
                                        td Sub Total
                                        td= order.SubTotal + ' ₹'
                                    tr
                                        td Discount
                                        td= order.Discount + ' ₹'
                                    tr.shipping-cost
                                        td Shipping Cost
                                        if order.ShippingFee == 0
                                            td Free
                                        else
                                            td= order.ShippingFee + ' ₹'
                                    tr
                                        td Total
                                        td
                                            span= order.Total + ' ₹'