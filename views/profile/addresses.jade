extends info

block details

    h3 Delivery Addresses
    each address in addresses
        .col-sm-4
            h4= address.FullName
            //p= address.Email
            p
                span= address.StreetAddress
                br
                span= address.PostCode + ' ' + address.City
                br
                span= address.Country
            p= 'Tel: ' + address.Phone

            form.dev-form(action='/usr/' + customer.Username + '/addresses/' + address.AddressID + '/edit', method='GET')
                button.btn.btn-default(type='submit')
                    i.fa.fa-edit
                    =' Edit'

            form.dev-form(action='/usr/' + customer.Username + '/addresses/' + address.AddressID + '/delete', method='POST')
                button.btn.btn-default(type='submit')
                    i.fa.fa-trash-o
                    = ' Delete'

    form(action='/usr/' + customer.Username + '/addresses/add', method='GET')
        button.btn.btn-default(type='submit')
            i.fa.fa-plus
            = ' Add new address'